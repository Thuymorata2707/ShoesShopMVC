@model WebBanGiayDep.Models.YKIENKHACHHANG

@{
    ViewBag.Title = "Themmoiykien";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .header-content {
        background-color: #f0efef;
        padding: 64px 0;
        width: 100%;
        text-align: center;
        margin-bottom: 10px;
    }

        .header-content h4 {
            display: block;
            width: inherit;
            font-weight: 800;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .header-content p {
            cursor: default;
        }

            .header-content p a {
                padding: 8px 0;
                text-decoration: none;
                color: var(--black-color);
                margin-right: 8px;
            }

                .header-content p a:hover {
                    color: var(--boder);
                }

            .header-content p span::before {
                content: "/";
                font-weight: 700;
                margin-right: 8px;
                color: var(--ba-color);
            }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }


    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #04AA6D;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }

    .thanhvien {
        margin: 0 200px 10px 200px;
    }

        .thanhvien h3 {
            font-weight: bold;
            font-size: 17px;
        }

    .btn {
        margin-left: 88%;
    }
</style>

<div class="header-content">
    <h4>ĐÓNG GÓP Ý KIẾN CỦA BẠN</h4>
    <p>
        <a href="@Url.Action("Index", "Home")">Trang Chủ</a>
        <span>Đóng góp ý kiến</span>
    </p>
</div>
<div class="container" style=" margin: 0 200px 20px 200px;">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <h1>Email</h1>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email của bạn" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h1>Họ tên</h1>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ tên của bạn" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h1>Ngày gửi</h1>
                <div class="col-md-10">
                    <input type="date" name="NgayGui" />
                    @Html.ValidationMessageFor(model => model.NgayGui)
                </div>
            </div>

            <div class="form-group">
                <h1>Nội dung</h1>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email của bạn" } })
                    @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="GỬI" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>



