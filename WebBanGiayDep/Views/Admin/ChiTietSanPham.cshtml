@model WebBanGiayDep.Models.SANPHAM

@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    dt {
        font-size: 16px
    }
</style>
<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align: center;">THÔNG TIN CHI TIẾT SẢN PHẨM</h2>
    <br />
    <div style="padding: 20px; align-items: center; display: flex; justify-content: center; ">
        <table style="width: 700px;" class="center">
            <tr>
                <td>Tên giày: </td>
                <td>
                    <input type="text" id="txt_Username" name="txt_Username" style="width:400px; border: 1px solid black; border-radius: 3px ;margin: 8px 0px; padding: 5px 3px;" disabled="disabled" value="@Model.TenGiay" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Size giày: </td>
                <td>
                    <input type="text" id="txt_HoTen" name="txt_HoTen" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" value="@Model.Size" />
                </td>
            </tr>

            <tr>
                <td class="auto-Left">Ảnh bìa:</td>
                <td>
                    <br />
                    <img src=@Url.Content("~/images/"+ Model.AnhBia) style="width:120px" />
                    <br />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Giá bán: </td>
                <td>
                    <input type="text" id="txt_DiaChi" name="txt_DiaChi" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" value="@String.Format("{0:0,0}", Model.GiaBan) VNĐ" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Thương hiệu: </td>
                <td>
                    <input type="text" id="txt_SDT" name="txt_SDT" required="required" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" value="@Model.THUONGHIEU.TenThuongHieu" />
                </td>
            </tr>

            <tr>
                <td class="auto-Left">Trạng thái: </td>
                <td>
                    @Html.DisplayFor(model => model.TrangThai)

            </tr>
            <tr>
                <td class="auto-Left">Nhà cung cấp: </td>
                <td>
                    <input type="text" id="txt_NgaySinh" name="txt_NgaySinh" maxlength="10" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" required="required" value="@Model.NHACUNGCAP.TenNCC" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Thời gian bảo hành: </td>
                <td>
                    <input type="text" id="txt_NgaySinh" name="txt_NgaySinh" maxlength="10" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" required="required" value="@Model.ThoiGianBaoHanh" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Ngày cập nhật: </td>
                <td>
                    <input type="text" id="txt_NgaySinh" name="txt_NgaySinh" maxlength="10" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" required="required" value="@String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Số lượng tồn: </td>
                <td>
                    <input type="text" id="txt_NgaySinh" name="txt_NgaySinh" maxlength="10" style="width: 400px; border: 1px solid black; border-radius: 3px; margin: 8px 0px; padding: 5px 3px;" required="required" value="@Model.SoLuongTon" />
                </td>
            </tr>
        </table>
    </div>
    <div style="display: flex; margin-left: 450px;">
        <p style="text-align: center; font-size: 16px; padding: 10px; background-color:aquamarine; margin-right: 10px; border-radius: 5px">
            @Html.ActionLink("Điều chỉnh", "SuaSanPham", new { id = Model.MaGiay })
        </p>
        <p style="text-align: center; font-size: 16px; padding: 10px; background-color: aquamarine; border-radius: 5px">
            @Html.ActionLink("Trở về trang sản phẩm", "SanPham")
        </p>
    </div>
</div>