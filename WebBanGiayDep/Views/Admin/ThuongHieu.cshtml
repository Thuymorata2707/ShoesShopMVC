@using WebBanGiayDep.Models
@using PagedList.Mvc
@model PagedList.PagedList<WebBanGiayDep.Models.THUONGHIEU>
@{
    ViewBag.Title = "ThuongHieu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .button {
        background-color: #4CAF50;
        border: 2px;
        color: white;
        padding: 7px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        margin-bottom: 10px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 17%;
    }

        .button:hover {
            color: black;
        }

    .table {
        width: 800px;
        margin-left: 17%;
        border: 1px solid black;
    }
</style>

<link href="~/Content/PagedList.css" rel="stylesheet" />

<div class="wrap" style="padding-top:2%; padding-left:10%; padding-right:10%; padding-bottom:5%">
    <h2 style="text-align: center; margin-bottom: 50px ">QUẢN LÝ THÔNG TIN THƯƠNG HIỆU</h2>

    <a href="@Url.Action("ThemMoiThuongHieu", "Admin")" class="button">THÊM THƯƠNG HIỆU</a>
    <table class="table" border="1">
        <tr style="border: 1px solid black; ">
            <th style="text-align:center; ">Tên thương hiệu</th>
            <th style="width: 180px; text-align:center">Các chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenThuongHieu)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("Sửa", "SuaThuongHieu", new { id = item.MaThuongHieu }) |
                    @Html.ActionLink("Xóa", "XoaThuongHieu", new { id = item.MaThuongHieu })
                </td>
            </tr>
        }

    </table>
    <br />
    <div class="MenuTrang" style=" text-align:center">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("ThuongHieu", new { page }))
    </div>
</div>
